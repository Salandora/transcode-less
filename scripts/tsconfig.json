{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "../lib",
    "sourceMap": true
  },
  "filesGlob": [
    "./**/*.ts",
    "./**/*.tsx",
    "../typings/index.d.ts",
    "!node_modules/**/*.ts",
    "!node_modules/**/*.tsx"
  ]
}
